extends layout

block content
    .panel.panel-default
        #name(data-name=name)
        #from(data-from=from)
        .panel-body
            ol.breadcrumb
                li
                    a(href="/admin") 商品信息管理
                if from == 'create'
                    li
                        a(href="/admin/create") 添加商品
                else
                    li
                        - var link = "/admin/detail/" + name
                        a(href=link) 商品详情
                li.active 添加属性
            .container
                form.form.form-horizontal(role="form")
                    .form-group
                        label.col-sm-2.control-label(for="attr-name") 属性名
                        .col-sm-2
                            input#attr-name.form-control(type="text", placeholder="请输入属性名", data-type="attr-new")
                    .form-group
                        label.col-sm-2.control-label(for="attr-val") 属性值
                        .col-sm-2
                            input#attr-val.form-control(type="text", placeholder="请输入该属性的值")

            .btn-list
                button#attr-save.btn.btn-default.disabled 保存
                a.btn.btn-default(href="/admin/create") 取消

