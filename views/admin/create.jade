extends layout

block content
    .panel.panel-default
        .panel-body
            .btn-list
                button#item-save.btn.btn-default.disabled 保存商品
                button#attribute-add.btn.btn-default 添加属性
                button#attribute-remove.btn.btn-default 删除属性
                a.btn.btn-default(href="/admin") 取消
            .container
                form.form.form-horizontal(role="form")
                    .form-group
                        label.col-sm-2.control-label 商品名称
                        .col-sm-2
                            input.form-control(type="text", placeholder="请输入商品名称", data-type="fixed", data-name="name")
                    .form-group
                        label.col-sm-2.control-label 商品数量
                        .col-sm-2
                            input.form-control(type="number", placeholder="请输入商品数量", data-type="fixed", data-name="amount")
                    .form-group
                        label.col-sm-2.control-label 单价（元）
                        .col-sm-2
                            input.form-control(type="number", placeholder="请输入单价", data-type="fixed", data-name="price")
                    .form-group
                        label.col-sm-2.control-label 单位
                        .col-sm-2
                            input.form-control(type="text", placeholder="请输入单位", data-type="fixed", data-name="unit")

