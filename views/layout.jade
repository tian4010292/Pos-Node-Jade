doctype html
html
    head
        if title
            title= title
        meta(charset='utf-8')
        link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap-theme.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        nav.navbar.navbar-inverse(role="navigation", ng-controller='NavController')
            .container.container-fluid
                .navbar-header
                    a.navbar-brand(href="..") Let's Go
            .collapse.navbar-collapse
                ul.nav.navbar-nav
                    li(ng-class='{ active: active.home }')
                        a(ng-click='goHome()') 主页
                    li(ng-class='{ active: active.list }')
                        a(ng-click='goToList()') 商品列表
                ul.nav.navbar-nav.pull-right
                    li(ng-class='{ active: active.cart }')
                        a(ng-click='goToCart()')
                            span.glyphicon.glyphicon-shopping-cart 购物车({{counter}})

        div(ng-view)

        script(type='text/javascript', src='/bower_components/jquery/jquery.min.js')
        script(type='text/javascript', src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
        script(type='text/javascript', src='/bower_components/lodash/dist/lodash.min.js')

        script(type='text/javascript', src='/frontend/navController.js')
        script(type='text/javascript', src='/frontend/home/homeController.js')
        script(type='text/javascript', src='/frontend/list/listController.js')
        script(type='text/javascript', src='/frontend/cart/cartController.js')
        script(type='text/javascript', src='/frontend/payment/paymentController.js')
